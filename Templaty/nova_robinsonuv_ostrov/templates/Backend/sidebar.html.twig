<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <i class="fa fa-user-circle-o fa-3x" aria-hidden="true" style="color: #b8c7ce"></i>
            </div>
            <div class="pull-left info">
                <p>{{ app.user.name }}</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>

        <ul class="sidebar-menu" data-widget="tree">
            <li class="header">{{ 'Main navigation'|trans }}</li>
            <li>
                <a href="{{ path('dashboard') }}">
                    <i class="fa fa-th"></i> <span>{{ 'Dashboard'|trans }}</span>
                </a>
            </li>

            <li class="treeview">
                <a href="#">
                    <i class="fa fa-user"></i> <span>{{ 'Guest'|trans }}</span>
                    <span class="pull-right-container"><i class="fa fa-angle-left pull-right"></i></span>
                </a>
                <ul class="treeview-menu">
                    <li><a href="{{ path('guest') }}"><i class="fa fa-circle-o"></i> {{ 'Guests'|trans }}</a></li>
                    <li><a href="{{ path('guest-challenge') }}"><i class="fa fa-circle-o"></i> {{ 'Challenges'|trans }}</a></li>
                </ul>
            </li>

            <li>
                <a href="{{ path('article') }}">
                    <i class="fa fa-file-image-o"></i> <span>{{ 'Article'|trans }}</span>
                </a>
            </li>

            <li>
                <a href="{{ path('challenge') }}">
                    <i class="fa fa-grav"></i> <span>{{ 'Challenges'|trans }}</span>
                </a>
            </li>
{% if is_granted('ROLE_ADMIN') %}
            <li>
                <a href="{{ path('staff') }}">
                    <i class="fa fa-user-circle-o"></i> <span>{{ 'Staff'|trans }}</span>
                </a>
            </li>

            <li>
                <a href="{{ path('mail') }}">
                    <i class="fa fa-envelope"></i> <span>{{ 'Mail'|trans }}</span>
                </a>
            </li>

            <li>
                <a href="{{ path('setting') }}">
                    <i class="fa fa-cog"></i> <span>{{ 'Setting'|trans }}</span>
                </a>
            </li>

            <li>
                <a href="{{ path('maintenance') }}">
                    <i class="fa fa-wrench"></i> <span>{{ 'Maintenance'|trans }}</span>
                </a>
            </li>

            <li class="treeview">
                <a href="#">
                    <i class="fa fa-file-text-o"></i> <span>{{ 'Logging'|trans }}</span>
                    <span class="pull-right-container"><i class="fa fa-angle-left pull-right"></i></span>
                </a>
                <ul class="treeview-menu">
                    <li><a href="{{ path('eventlog-guest') }}"><i class="fa fa-circle-o"></i> {{ 'Guest'|trans }}</a></li>
                    <li><a href="{{ path('eventlog-staff') }}"><i class="fa fa-circle-o"></i> {{ 'Staff'|trans }}</a></li>
                </ul>
            </li>
{% endif %}
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>
<script>
$(function(){
    // fix active menu
    var pathName = window.location.pathname;
    $('ul.sidebar-menu').find('li').removeClass('active');
    $('ul.sidebar-menu').find('a[href="'+pathName+'"]').parents('li').addClass('active');
})
</script>